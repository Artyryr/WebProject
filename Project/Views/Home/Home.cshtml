@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CookIT</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="css/animate.css">

    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <link rel="stylesheet" href="css/owl.theme.default.min.css">
    <link rel="stylesheet" href="css/magnific-popup.css">

    <link rel="stylesheet" href="css/aos.css">

    <link rel="stylesheet" href="css/ionicons.min.css">

    <link rel="stylesheet" href="css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="css/jquery.timepicker.css">


    <link rel="stylesheet" href="css/flaticon.css">
    <link rel="stylesheet" href="css/icomoon.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" asp-action="Index">CookIT</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a a asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-action="DisplayPage" class="nav-link">Display Page</a></li>
                    <li class="nav-item"><a asp-action="InsertPage" class="nav-link">Insert Page</a></li>
                    <li class="nav-item"><a asp-action="DataPage" class="nav-link">Data Page</a></li>
                    <li class="nav-item"><a asp-action="UserPage" class="nav-link">User Page</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image: url('/images/bg_1.jpg');">
            <div class="overlay"></div>
            <div class="container">
                <div class="row slider-text align-items-center justify-content-center text-center">
                    <div class="col-md-10 col-sm-12 ftco-animate">
                        <h1 class="mb-3">Cooking is easy!</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section" style="background-color:white">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-5">
                <div class="col-md-7 text-center heading-section  ftco-animate">
                    <h2>The Most Popular Dishes</h2>
                </div>
            </div>
        </div>
    </section>
    <section class="ftco-section bg-light">
        <div class="container special-dish">
            <div class="row d-flex no-gutters">
                <div class="col-md-6">
                    <a asp-action="DisplayPage">
                    <div class="block-3 d-md-flex ftco-animate">
                        <div class="image order-last" style="background-image: url(/images/Home/dish_1.jpg);"></div>
                        <div class="text text-center order-first height300">
                            <h2 class="heading">Scrambled Egg-Stuffed Potatoes</h2>
                            <p>Why not add baked potatoes to your breakfast-for-dinner rotation.</p>

                        </div>
                    </div>
                        </a>
                    <div class="block-3 d-md-flex ftco-animate height300">
                        <div class="image order-first" style="background-image: url(/images/Home/dish_2.jpg);"></div>
                        <div class="text text-center order-first">
                            <h2 class="heading">Vegetable-Quinoa Skillet With Goat Cheese</h2>
                            <p>This cheesy, hearty skillet is a great meatless summer meal.</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="block-3 d-md-flex ftco-animate height300">
                        <div class="image order-last" style="background-image: url(/images/Home/dish_3.jpg);"></div>
                        <div class="text text-center order-first">
                            <h2 class="heading">Shaved Asparagus and Snap Pea Salad</h2>
                            <p>A crunchy, savory salad that’s perfect for spring or summer.</p>
                        </div>
                    </div>
                    <div class="block-3 d-md-flex ftco-animate height300">
                        <div class="image order-first" style="background-image: url(images/Home/dish_4.jpg);"></div>
                        <div class="text text-center order-first">
                            <h2 class="heading">17 Tasty Ways to Cook With Melon</h2>
                            <p>Soups, salads, smoothies, and beyond. Everything what you can imagine and even more!</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer-main ftco-bg-dark text-center">
        <div class="row">
            <div class="col-lg-12 text-center">
                Copyright &copy Created By Artur Fundukyan - 300989718;
            </div>
        </div>
    </footer>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/main.js"></script>

</body>
</html>